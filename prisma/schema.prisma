// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          UserRole? @default(VIEWER) // Default to VIEWER role
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum UserRole {
  SUPER_ADMIN
  CONTENT_ADMIN
  EDITOR
  VIEWER
}

// CMS Content Models

model HeroBanner {
  id          String   @id @default(cuid())
  title       String
  subtitle    String?  @db.Text
  description String?  @db.Text
  imageUrl    String
  ctaText     String?
  ctaLink     String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order, isActive])
}

model AboutContent {
  id        String   @id @default(cuid())
  section   String   @unique // "who-we-are", "about-us", "mission"
  title     String
  content   String   @db.Text
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Program {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String   @db.Text
  imageUrl    String?
  icon        String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug, isActive])
}

model Objective {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([order, isActive])
}

model LegalDocument {
  id                 String    @id @default(cuid())
  name               String
  registrationNumber String
  documentType       String // "society", "tax", "gst", "fcra", etc.
  validity           String // "One Time", "Valid AY 2022-2023 to 2026-2027", etc.
  issueDate          DateTime?
  expiryDate         DateTime?
  fileUrl            String?
  notes              String?   @db.Text
  order              Int       @default(0)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  @@index([documentType, order])
}

model TeamMember {
  id        String   @id @default(cuid())
  name      String
  position  String
  bio       String?  @db.Text
  imageUrl  String?
  email     String?
  phone     String?
  linkedIn  String?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([order, isActive])
}

model GalleryItem {
  id          String    @id @default(cuid())
  title       String
  description String?   @db.Text
  imageUrl    String?
  videoUrl    String? // YouTube link
  type        MediaType
  category    String? // "education", "training", "events", etc.
  order       Int       @default(0)
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([type, category, isActive])
}

enum MediaType {
  IMAGE
  VIDEO
}

model BlogPost {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  excerpt     String?   @db.Text
  content     String    @db.Text
  imageUrl    String?
  author      String
  category    String?
  tags        String[] // Array of tags
  isPublished Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug, isPublished])
  @@index([category, isPublished])
}

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String?
  message   String   @db.Text
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([isRead, createdAt])
}
